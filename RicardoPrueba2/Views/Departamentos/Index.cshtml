@model IEnumerable<RicardoPrueba2.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Administrador De Departamentos</h1>

<p>
    <a asp-action="Create">Crear Departamento</a>
    <a asp-action="Index">Listar Departamentos</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaDepartamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaDepartamento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartamentoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.DepartamentoId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.DepartamentoId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
